<div class="fixed-action-btn-chat" style="bottom: 10px; right: 24px;">
    <a class="btn-floating btn-large blue waves-effect waves-light collapse-chat" data-original-title="Minimizar">
        <i class="fa fa-cloud"></i>
    </a>
</div>

    <section id="chatbot" style="display:none;">
        <div class="box box-primary direct-chat direct-chat-primary">
            <div class="box-header with-border">
                <h3 class="box-title">AJE Group Chatbot</h3>

                <div id="resetChat" class="btn-group">
                    <button class="dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-bars"></i> Menú
                    </button>

                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="javascript:Sidebar.toggle();">
                            <i class="fa fa-question-circle"></i> Preguntas Frecuentes
                        </a>
                    </div>
                </div>


                <div class="box-tools pull-right">
                    <span data-toggle="tooltip" class="badge bg-light-blue" data-original-title="3 Mensajes nuevos">3</span>

                    <button type="button" class="btn btn-box-tool collapse-chat" data-original-title="Minimizar">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <!-- Conversations are loaded here -->
                <div class="direct-chat-messages">
                    <!-- Message. Default to the left -->
                    <div class="direct-chat-msg">
                        <div class="direct-chat-info clearfix">
                            <span class="direct-chat-name pull-left">Tony Stark</span>
                            <span class="direct-chat-timestamp pull-right">23 Ene 2:00 pm</span>
                        </div>
                        <!-- /.direct-chat-info -->
                        <img class="direct-chat-img" src="~/images/user1-128x128.jpg" alt="Message User Image"><!-- /.direct-chat-img -->
                        <div class="direct-chat-text">
                            Has visto mi traje!
                        </div>
                        <!-- /.direct-chat-text -->
                    </div>
                    <!-- /.direct-chat-msg -->
                    <!-- Message to the right -->
                    <div class="direct-chat-msg right">
                        <div class="direct-chat-info clearfix">
                            <span class="direct-chat-name pull-right">Viuda negra</span>
                            <span class="direct-chat-timestamp pull-left">23 Ene 2:05 pm</span>
                        </div>
                        <!-- /.direct-chat-info -->
                        <img class="direct-chat-img" src="~/images/user3-128x128.jpg" alt="Message User Image"><!-- /.direct-chat-img -->
                        <div class="direct-chat-text">
                            Lo envié a la lavandería!
                        </div>
                        <!-- /.direct-chat-text -->
                    </div>
                    <!-- /.direct-chat-msg -->
                </div>
                <!--/.direct-chat-messages-->
                <!-- /.direct-chat-pane -->
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <form action="#" method="post">
                    <div class="input-group">
                        <input id="textInput" type="text" name="message" placeholder="Escribir mensaje ..." 
                               class="form-control"
                               onkeydown="ConversationPanel.inputKeyDown(event, this)" />
                        
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-primary btn-flat work-inprogress">Enviar</button>
                        </span>
                    </div>
                </form>
            </div>
            <!-- /.box-footer-->
        </div>
    </section>

<!--/.Chatbot-->